universe = docker
docker_image = staphb/pilon
executable = vcf_pilon.sh
arguments = "$(RUN) $(REF)"

output = $(RUN)_pilon.out
error = $(RUN)_pilon.err
log = $(RUN)_pilon.log

should_transfer_files = YES
when_to_transfer_output = ON_EXIT
transfer_input_files = $(RUN).ready.bam, $(RUN).ready.bai

request_cpus = 4
request_memory = 2GB
request_disk = 2GB

queue

