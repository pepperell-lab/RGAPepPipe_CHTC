universe = vanilla
executable = /opt/PepPrograms/FastQC-0.11.8.fastq.gzc
arguments = "$(RUN)_1.fastq.gz $(RUN)_2.fastq.gz -t 4"

output =fastqc_$(RUN).out
error =fastqc_$(RUN).err
log =fastqc_$(RUN).log

transfer_executable = FALSE
should_transfer_files = YES
when_to_transfer_output = ON_EXIT
transfer_input_files = $(RUN)_1.fastq.gz, $(RUN)_2.fastq.gz

request_cpus = 4
request_memory = 1GB
request_disk = 2GB

queue
